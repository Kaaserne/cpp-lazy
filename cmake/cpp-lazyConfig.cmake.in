@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

if (NOT CPP_LAZY_USE_STANDALONE)
    message(VERBOSE "cpp-lazy: Not using standalone, trying to find {fmt}")
    if (CPP_LAZY_USE_INSTALLED_FMT)
        message(VERBOSE "cpp-lazy: Using installed {fmt}")
    else()
        message(VERBOSE "cpp-lazy: Using bundled {fmt}")
        if (NOT DEFINED fmt_DIR)
            message(STATUS "cpp-lazy: fmt_DIR not defined, setting it to ${CMAKE_CURRENT_LIST_DIR}/../fmt")
            set_and_check(fmt_DIR "${CMAKE_CURRENT_LIST_DIR}/../fmt")
        endif()
    endif()
    find_dependency(fmt @CPP-LAZY_FMT_DEP_VERSION@ REQUIRED CONFIG)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/cpp-lazyTargets.cmake")
