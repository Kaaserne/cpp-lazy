@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

if (NOT CPP_LAZY_USE_STANDALONE)
    if (CPP_LAZY_USE_INSTALLED_FMT)
        message(VERBOSE "Using system installed {fmt}")
        set(FMT_VER_FIND_PACKAGE "${CPP_LAZY_FMT_DEP_VERSION}")
    else()
        message(VERBOSE "Using bundled {fmt}: ${CMAKE_CURRENT_LIST_DIR}/../fmt. Version @CPP_LAZY_FMT_DEP_VERSION@")
        set(fmt_DIR "${CMAKE_CURRENT_LIST_DIR}/../fmt" CACHE STRING "" FORCE)
        set_and_check(fmt_DIR "${fmt_DIR}")
        set(FMT_VER_FIND_PACKAGE "@CPP_LAZY_FMT_DEP_VERSION@")
    endif()
    find_dependency(fmt ${FMT_VER_FIND_PACKAGE} REQUIRED CONFIG)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/cpp-lazyTargets.cmake")
